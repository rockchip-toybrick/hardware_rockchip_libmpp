# This file setup the default enable flag of all supported codecs
# The default value is ON for all codecs
# If MPP_SOC is defined, we will enable/disable codecs based on the SoC capability

# Default to ON
set(ENABLE_AVSD_DEFAULT ON)
set(ENABLE_AVS2D_DEFAULT ON)
set(ENABLE_H263D_DEFAULT ON)
set(ENABLE_H264D_DEFAULT ON)
set(ENABLE_H265D_DEFAULT ON)
set(ENABLE_MPEG2D_DEFAULT ON)
set(ENABLE_MPEG4D_DEFAULT ON)
set(ENABLE_VP8D_DEFAULT ON)
set(ENABLE_VP9D_DEFAULT ON)
set(ENABLE_JPEGD_DEFAULT ON)
set(ENABLE_AV1D_DEFAULT ON)

set(ENABLE_H264E_DEFAULT ON)
set(ENABLE_H265E_DEFAULT ON)
set(ENABLE_JPEGE_DEFAULT ON)
set(ENABLE_VP8E_DEFAULT ON)

if (MPP_SOC)
    string(TOUPPER ${MPP_SOC} MPP_SOC_UPPER)
    message(STATUS "Configuring for SoC: ${MPP_SOC_UPPER}")

    if (MPP_SOC_UPPER STREQUAL "RK3588")
        # RK3588 supports all codecs
    elseif (MPP_SOC_UPPER STREQUAL "RK3576")
        set(ENABLE_VP8E_DEFAULT OFF)

        set(ENABLE_AVSD_DEFAULT OFF)
        set(ENABLE_H263D_DEFAULT OFF)
        set(ENABLE_MPEG2D_DEFAULT OFF)
        set(ENABLE_MPEG4D_DEFAULT OFF)
        set(ENABLE_VP8D_DEFAULT OFF)
    elseif (MPP_SOC_UPPER MATCHES "RK3528")
        set(ENABLE_VP8E_DEFAULT OFF)

        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)
    elseif (MPP_SOC_UPPER MATCHES "RK356[678]")
        set(ENABLE_VP8E_DEFAULT OFF)

        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3562")
        set(ENABLE_VP8E_DEFAULT OFF)
        set(ENABLE_H265E_DEFAULT OFF)

        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_AVSD_DEFAULT OFF)
        set(ENABLE_H263D_DEFAULT OFF)
        set(ENABLE_MPEG2D_DEFAULT OFF)
        set(ENABLE_MPEG4D_DEFAULT OFF)
        set(ENABLE_VP8D_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3399")
        set(ENABLE_H265E_DEFAULT OFF)

        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3328")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3288")
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)
        set(ENABLE_AV1D_DEFAULT OFF)

        set(ENABLE_H265E_DEFAULT OFF)
    elseif (MPP_SOC_UPPER MATCHES "RK322[89]")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3368")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)

        set(ENABLE_H265E_DEFAULT OFF)
    elseif (MPP_SOC_UPPER MATCHES "RK312[68]")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3036")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)

        set(ENABLE_H265E_DEFAULT OFF)
        set(ENABLE_H264E_DEFAULT OFF)
        set(ENABLE_JPEGE_DEFAULT OFF)
        set(ENABLE_VP8E_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3066" OR MPP_SOC_UPPER STREQUAL "RK3188")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)
        set(ENABLE_H265D_DEFAULT OFF)

        set(ENABLE_H265E_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RV1126" OR MPP_SOC_UPPER STREQUAL "RV1109")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_VP8D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)
        set(ENABLE_MPEG2D_DEFAULT OFF)
        set(ENABLE_MPEG4D_DEFAULT OFF)
        set(ENABLE_AVSD_DEFAULT OFF)
        set(ENABLE_H263D_DEFAULT OFF)

        set(ENABLE_VP8E_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RV1126B")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_VP8D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)
        set(ENABLE_MPEG2D_DEFAULT OFF)
        set(ENABLE_MPEG4D_DEFAULT OFF)
        set(ENABLE_AVSD_DEFAULT OFF)
        set(ENABLE_H263D_DEFAULT OFF)

        set(ENABLE_VP8E_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK1808")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)
        set(ENABLE_H265D_DEFAULT OFF)

        set(ENABLE_H265E_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3326" OR MPP_SOC_UPPER STREQUAL "PX30")
        set(ENABLE_AV1D_DEFAULT OFF)
        set(ENABLE_AVS2D_DEFAULT OFF)
        set(ENABLE_VP9D_DEFAULT OFF)

        set(ENABLE_H265E_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3572")
        set(ENABLE_AVSD_DEFAULT OFF)
        set(ENABLE_H263D_DEFAULT OFF)
        set(ENABLE_MPEG2D_DEFAULT OFF)
        set(ENABLE_MPEG4D_DEFAULT OFF)
        set(ENABLE_VP8D_DEFAULT OFF)

        set(ENABLE_VP8E_DEFAULT OFF)
    elseif (MPP_SOC_UPPER STREQUAL "RK3538")
        set(ENABLE_AVS2D_DEFAULT OFF)

        set(ENABLE_H264E_DEFAULT OFF)
        set(ENABLE_H265E_DEFAULT OFF)
        set(ENABLE_VP8E_DEFAULT OFF)
    endif()
endif()
